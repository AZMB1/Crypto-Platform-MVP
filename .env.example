# Database & Cache (Railway - Get from Railway dashboard)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# Polygon.io API (Get from https://polygon.io/dashboard/api-keys)
POLYGON_API_KEY=your_polygon_api_key_here

# NextAuth (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=generate_random_secret_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# Application Config
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=wss://socket.polygon.io

# ML & Training (Railway volume paths)
MODEL_STORAGE_PATH=/app/models
DATA_STORAGE_PATH=/app/data
TRAINING_ENABLED=false
ML_INFERENCE_URL=http://localhost:5000
